{
  "build": {
    "devPath": "https://chat.openai.com",
    "distDir": "https://chat.openai.com",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "chatgtp",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "chatgtp",
        "width": 800,
        "height": 600,
        "url": "https://chat.openai.com"
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.thexmep.unofficialchatgtp",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
